<plugin>
  <extension point="org.eclipse.ltk.core.refactoring.refactoringContributions">

    <contribution class="edu.cuny.citytech.defaultrefactoring.ui.contributions.MigrateSkeletalImplementationToInterfaceRefactoringContribution"
    id="org.eclipse.migrate.skeletal.implementation.to.interface.contribution" />
  </extension>
  <extension point="org.eclipse.ui.commands">
    <command categoryId="org.eclipse.jdt.ui.category.refactoring"
    description="%MigrateSkeletalImplementationToInterfaceDescription"
    id="org.eclipse.migrate.skeletal.implementation.to.interface.command"
    name="%MigrateSkeletalImplementationToInterfaceLabel">
    </command>
  </extension>
  <extension point="org.eclipse.ui.handlers">
    <handler class="edu.cuny.citytech.defaultrefactoring.ui.handlers.MigrateSkeletalImplementationToInterfaceHandler"
    commandId="org.eclipse.migrate.skeletal.implementation.to.interface.command">

      <activeWhen>
        <with variable="selection">
          <iterate ifEmpty="false" operator="or">
            <!-- [rk] TODO: We'll probably need a compilation unit here as well. #1 -->
            <instanceof value="org.eclipse.jdt.core.IMethod">
            </instanceof>
          </iterate>
        </with>
      </activeWhen>
    </handler>
  </extension>
  <extension point="org.eclipse.ui.menus">
    <!-- [rk] Doesn't seem to be working -->
    <menuContribution locationURI="menu:org.eclipse.jdt.ui.refactoring.menu?after=additions">

      <command commandId="org.eclipse.migrate.skeletal.implementation.to.interface.command"
      mnemonic="S"
      id="org.eclipse.migrate.skeletal.implementation.to.interface.menus.command">

        <visibleWhen checkEnabled="true"></visibleWhen>
      </command>
    </menuContribution>
    <menuContribution locationURI="popup:org.eclipse.jdt.ui.refactoring.menu?after=additions">

      <command commandId="org.eclipse.migrate.skeletal.implementation.to.interface.command"
      style="push">
        <visibleWhen checkEnabled="true"></visibleWhen>
      </command>
    </menuContribution>
  </extension>
